<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/table_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Date"
                android:textSize="15sp"

                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >
            <EditText
                android:id="@+id/exp_date"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:text=""
                android:hint="Date"
                android:textSize="15sp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Type"
                android:textSize="15sp"

                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >


            <Spinner
                android:id="@+id/exp_type"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:text=""
                android:hint="Types"
                android:textSize="15sp"
                />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense On"
                android:textSize="15sp"

                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >



            <Spinner
                android:id="@+id/exp_on"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:text=""
                android:hint="Types"
                android:textSize="15sp"
                />

        </TableRow>



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >



            <EditText
                android:id="@+id/exp_des"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:text=""
                android:textSize="15sp"

                android:hint="Description"
                />
        </TableRow>


        <TableRow
            android:layout_width="388dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart">


            <EditText
                android:id="@+id/exp_qty"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:inputType="number"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="15sp" />


        </TableRow>

        <TableRow
            android:layout_width="388dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart">




            <EditText
                android:id="@+id/exp_amount"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Amount"
                android:inputType="number"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge Name"
                android:textSize="15sp"

                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            >



            <Spinner
                android:id="@+id/charge_name"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:text=""
                android:hint="Types"
                android:textSize="15sp"
                />

        </TableRow>
    </TableLayout>
</LinearLayout>